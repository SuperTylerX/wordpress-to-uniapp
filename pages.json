{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "前端茶会",
				"enablePullDownRefresh": true,
				"app-plus": {
					"pullToRefresh": {
						"support": true,
						"color": "#118fff",
						"style": "circle"
					}
				}
			}
		},
		{
			"path": "pages/category/category",
			"style": {
				"navigationBarTitleText": "分类",
				"navigationBarBackgroundColor": "#FFFFFF",
				"app-plus": {
					"bounce": "none"
				}
			}
		},
		{
			"path": "pages/rank/rank",
			"style": {
				"navigationBarTitleText": "排行"
			}
		},
		{
			"path": "pages/post/post"
		},
		{
			"path": "pages/center/center",
			"style": {
				"navigationBarTitleText": "",
				"navigationBarBackgroundColor": "#FFFFFF",
				"app-plus": {
					"bounce": "none"
				}
			}
		},
		{
			"path": "pages/center/profile",
			"style": {
				"navigationBarTitleText": "个人信息",
				"navigationBarBackgroundColor": "#FFFFFF"
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "",
				"navigationBarBackgroundColor": "#FFFFFF",
				"app-plus": {
					"bounce": "none"
				}
			}
		},
		{
			"path": "pages/login/register",
			"style": {
				"navigationBarTitleText": "",
				"navigationBarBackgroundColor": "#FFFFFF",
				"app-plus": {
					"bounce": "none"
				}
			}
		},
		{
			"path": "pages/login/reset",
			"style": {
				"navigationBarTitleText": "",
				"navigationBarBackgroundColor": "#FFFFFF",
				"app-plus": {
					"bounce": "none"
				}
			}
		},
		{
			"path": "pages/webpage/webpage",
			"style": {
				"app-plus": {
					"bounce": "none"
				}
			}
		},
		{
			"path": "pages/list/list",
			"style": {
				"enablePullDownRefresh": true,
				"app-plus": {
					"bounce": "none",
					"pullToRefresh": {
						"support": true,
						"color": "#118fff",
						"style": "circle"
					}
				}
			}

		},
		{
			"path": "pages/comment/comment"
		},
		{
			"path": "pages/page/page"
		},
		{
			"path": "pages/forum/index",
			"style": {
				"navigationBarTitleText": "前端茶会",
				"enablePullDownRefresh": true,
				"navigationStyle": "custom", // 隐藏系统导航栏
				"navigationBarBackgroundColor": "#FFFFFF",
				"app-plus": {
					"pullToRefresh": {
						"support": true,
						"color": "#118fff",
						"style": "circle"
					}
				}
			}
		},
		{
			"path": "pages/forum/post",
			"style": {
				"navigationBarTitleText": "动态",
				"enablePullDownRefresh": true,
				"navigationStyle": "custom", // 隐藏系统导航栏
				"app-plus": {
					"pullToRefresh": {
						"support": true,
						"color": "#118fff",
						"style": "circle"
					},
					"softinputMode": "adjustResize"
				}
			}
		},
		{
			"path": "pages/forum/publish",
			"style": {
				"navigationBarTitleText": "发布话题",
				"navigationStyle": "custom", // 隐藏系统导航栏
				"app-plus": {
					"softinputMode": "adjustResize"
				}
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "前端茶会",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#959595",
		"selectedColor": "#118fff",
		"borderStyle": "white",
		"backgroundColor": "#FFFFFF",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/tab-home.png",
			"selectedIconPath": "./static/tab-home-on.png",
			"text": "首页"
		}, {
			"pagePath": "pages/category/category",
			"iconPath": "static/tab-category.png",
			"selectedIconPath": "static/tab-category-on.png",
			"text": "分类"
		}, {
			"pagePath": "pages/forum/index",
			"iconPath": "static/tab-my.png",
			"selectedIconPath": "static/tab-my-on.png",
			"text": "圈子"
		}, {
			"pagePath": "pages/center/center",
			"iconPath": "static/tab-my.png",
			"selectedIconPath": "static/tab-my-on.png",
			"text": "我的"
		}]
	}
}
